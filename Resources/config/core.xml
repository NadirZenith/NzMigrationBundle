<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="nz.migration.handler.wp.class">Nz\MigrationBundle\Migrator\WpMigratorHandler</parameter>
        <parameter key="nz.migrator.pool.class">Nz\MigrationBundle\Migrator\MigratorPool</parameter>
    </parameters>
    
    <services>
        <!--    wp migration handler    -->
        <service id="nz.migration.handler.wp"  class="%nz.migration.handler.wp.class%">
            <argument type="service" id="nz.migration.pool" />
            <argument type="service" id="doctrine" />
        </service>   
        <service id="wp.migrator" alias="nz.migration.handler"  />
        
        
        <!--    migrators pool    -->
        <service id="nz.migrator.pool"  class="%nz.migrator.pool.class%" public="false"/>

    </services>
</container>
