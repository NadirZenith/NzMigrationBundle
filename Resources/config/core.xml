<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="nz.wp.migration.handler.class">Nz\MigrationBundle\Migrator\MigratorHandler</parameter>
        <parameter key="nz.wp.migration.pool.class">Nz\MigrationBundle\Migrator\MigratorPool</parameter>
    </parameters>
    
    <services>
        
        <service id="nz.wp.migration.handler"  class="%nz.wp.migration.handler.class%">
            <argument type="service" id="nz.wp.migration.pool" />
            <argument type="service" id="doctrine" />
        </service>   
        <service id="wp.migrator" alias="nz.wp.migration.handler"  />
        
        <service id="nz.wp.migration.pool"  class="%nz.wp.migration.pool.class%" public="false"/>

    </services>
</container>
